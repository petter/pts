{
    "name": "pts-lang",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "bin": "cli.js",
    "scripts": {
        "start": "nodemon",
        "build": "rimraf ./build && tsc",
        "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
        "test": "ava",
        "test:watch": "ava --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/petter/pts.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/petter/pts/issues"
    },
    "homepage": "https://github.com/petter/pts#readme",
    "dependencies": {
        "lodash": "^4.17.20",
        "prettier": "^2.2.1",
        "tree-sitter": "^0.17.1",
        "tree-sitter-pts": "^1.0.0",
        "typescript": "^4.0.5",
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.165",
        "@types/node": "^14.14.6",
        "@types/prettier": "^2.1.5",
        "@types/yargs": "^15.0.12",
        "@typescript-eslint/eslint-plugin": "^4.14.2",
        "@typescript-eslint/parser": "^4.14.2",
        "ava": "^3.15.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.3",
        "nodemon": "^2.0.6",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-commit": "npm run build && git add build && HUSKY_SKIP_HOOKS=1 git commit --amend -C HEAD --no-verify"
        }
    },
    "lint-staged": {
        "*.{js,ts,json}": "eslint --cache --quiet --fix"
    }
}
